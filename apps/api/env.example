# TalentFlux Backend Environment Variables
# Copy this file to .env and fill in your values

# Application
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/talentflux
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# Redis
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10

# AI Models
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_MODEL=gpt-4o
CLAUDE_MODEL=claude-3-sonnet-20240229
EMBEDDING_MODEL=text-embedding-3-small

# AI Configuration
AI_ENABLED=true
RAG_ENABLED=true
MAX_TOKENS=4000
TEMPERATURE=0.1

# File Storage (AWS S3)
STORAGE_BUCKET=talentflux-storage
STORAGE_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
FROM_EMAIL=noreply@talentflux.com

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://app.talentflux.com
ALLOWED_HOSTS=localhost,127.0.0.1,app.talentflux.com

# Monitoring
LOG_LEVEL=INFO
ENABLE_TRACING=false
METRICS_ENABLED=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_AUTH_PER_MINUTE=5

# Feature Flags
FEATURE_AI_MATCHING=true
FEATURE_AI_SCREENING=true
FEATURE_MASKED_REVIEW=true
FEATURE_DEI_ANALYTICS=true
